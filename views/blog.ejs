<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <%- include("./partials/head") %>
  </head>
  <body>
    <%- include("./partials/navbar") %>
    <% if (locals.blog) { %>
    <div class="container mt-4">
      <h1>
        <%= blog.title %>
      </h1>
      <img src="<%= blog.coverImageURL %>" alt="" width="60%" />
      <pre style="white-space: pre-wrap"><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
      <h3>Created By :-</h3>
      <img src="<%=blog.createdBy.profileImageURL%>" width="100px" alt="" />
       
      <p><%= blog.createdBy.fullName %></p>
    </div>
    <% } %>
    <% if (locals.user) { %>
      
      <div class="container mt-3">
       
        <form action="/blog/comment/<%= blog._id %>" method="post">
          <div class="mb-3">
            <label for="content" class="form-label">Write a Comment</label>
            <input type="text" name="content" class="form-control" id="content" />
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
      </div>
     
     
    <% } %>
    <div class="container">
      <h1>Comments (<%= comments.length%>)</h1>
      <% comments.forEach(comment=> { %>
        <div class="container mt-4">
          <img src="<%=comment.createdBy.profileImageURL%>" width="100px" alt="" />
          <%=comment.createdBy.fullName%>
            <p>
              <%= comment.content %>
            </p>
        </div>
        <% }) %>
    </div>
   
    
    <%- include("./partials/scripts") %>
  </body>
</html>
